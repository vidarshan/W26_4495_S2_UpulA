generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                   String        @id @default(uuid())
  name                 String
  email                String        @unique
  role                 Role
  createdAt            DateTime      @default(now())
  password             String
  assignedAppointments Appointment[] @relation("AppointmentStaff")
  staffProfile         StaffProfile?

  assignments      Assignment[]
  leaves           Leave[]
  timesheetEntries TimesheetEntry[]
}

model Client {
  id               String       @id @default(uuid())
  title            String?
  firstName        String
  lastName         String
  companyName      String?
  email            String
  phone            String
  preferredContact String
  leadSource       String?
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  addresses        Address[]
  notes            ClientNote[]
  jobs             Job[]
}

model ClientNote {
  id        String   @id @default(uuid())
  clientId  String
  content   String
  createdAt DateTime @default(now())
  client    Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
}

model Address {
  id         String   @id @default(uuid())
  clientId   String
  street1    String
  street2    String?
  city       String
  province   String
  postalCode String
  country    String
  isPrimary  Boolean  @default(false)
  isBilling  Boolean  @default(false)
  createdAt  DateTime @default(now())
  client     Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  jobs       Job[]
}

model Job {
  id                String        @id @default(uuid())
  title             String
  type              JobType
  clientId          String
  addressId         String
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  isAnytime         Boolean       @default(false)
  visitInstructions String?
  appointments      Appointment[]
  address           Address       @relation(fields: [addressId], references: [id])
  client            Client        @relation(fields: [clientId], references: [id])
  lineItems         JobLineItem[]
  notes             JobNote[]
  recurrence        Recurrence?
}

model Appointment {
  id             String             @id @default(uuid())
  startTime      DateTime           @db.Timestamptz(6)
  endTime        DateTime           @db.Timestamptz(6)
  status         AppointmentStatus
  createdAt      DateTime           @default(now()) @db.Timestamptz(6)
  completionSent Boolean            @default(false)
  reminder1dSent Boolean            @default(false)
  reminder5dSent Boolean            @default(false)
  jobId          String
  timeSpent      Int?
  completedAt    DateTime?
  job            Job                @relation(fields: [jobId], references: [id], onDelete: Cascade)
  images         AppointmentImage[]
  notes          VisitNote[]
  staff          User[]             @relation("AppointmentStaff")

  assignments Assignment[]

  @@index([startTime])
  @@index([endTime])
}

model Recurrence {
  id        String    @id @default(uuid())
  jobId     String    @unique
  frequency String
  interval  Int
  endsOn    DateTime?
  endType   String
  endsAfter Int?
  job       Job       @relation(fields: [jobId], references: [id], onDelete: Cascade)
}

model JobLineItem {
  id          String  @id @default(uuid())
  jobId       String
  name        String
  quantity    Int
  unitCost    Float?
  unitPrice   Float?
  total       Float?
  description String?
  job         Job     @relation(fields: [jobId], references: [id], onDelete: Cascade)
}

model JobNote {
  id        String         @id @default(uuid())
  jobId     String
  content   String?
  createdAt DateTime       @default(now())
  job       Job            @relation(fields: [jobId], references: [id], onDelete: Cascade)
  images    JobNoteImage[]
}

model JobNoteImage {
  id     String  @id @default(uuid())
  noteId String
  url    String
  note   JobNote @relation(fields: [noteId], references: [id], onDelete: Cascade)
}

model VisitNote {
  id              String      @id @default(uuid())
  content         String
  isClientVisible Boolean     @default(false)
  appointmentId   String
  createdAt       DateTime    @default(now())
  appointment     Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
}

model AppointmentImage {
  id            String      @id @default(uuid())
  appointmentId String
  url           String
  fileKey       String?
  appointment   Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
}

model StaffProfile {
  id             String              @id @default(uuid())
  userId         String              @unique
  user           User                @relation(fields: [userId], references: [id])
  postalCode     String?
  hourlyRate     Float               @default(0)
  availabilities StaffAvailability[]
}

model Assignment {
  id            String           @id @default(uuid())
  appointmentId String
  staffId       String
  status        AssignmentStatus @default(PENDING)

  // Timing & Travel
  plannedStart DateTime? // Includes estimated travel
  plannedEnd   DateTime?
  actualStart  DateTime? // Captured via staff clock-in
  actualEnd    DateTime? // Captured via staff clock-out
  breakMinutes Int       @default(0)

  // Payroll Snapshots
  hourlyRateAtTime Float? // Lock the rate in case staff gets a raise later

  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  appointment    Appointment     @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  staff          User            @relation(fields: [staffId], references: [id])
  timesheetEntry TimesheetEntry?
}

model StaffAvailability {
  id             String    @id @default(uuid())
  staffProfileId String
  dayOfWeek      Int // 0-6 (Sunday-Saturday)
  startMinute    Int // Minutes from midnight (e.g., 480 for 8:00 AM)
  endMinute      Int // Minutes from midnight
  effectiveFrom  DateTime?
  effectiveTo    DateTime?
  createdAt      DateTime  @default(now())

  staffProfile StaffProfile @relation(fields: [staffProfileId], references: [id], onDelete: Cascade)
}

model Leave {
  id        String    @id @default(uuid())
  staffId   String
  type      LeaveType
  startAt   DateTime
  endAt     DateTime
  reason    String?
  createdAt DateTime  @default(now())

  staff User @relation(fields: [staffId], references: [id])
}

model TimesheetPeriod {
  id        String           @id @default(uuid())
  startDate DateTime
  endDate   DateTime
  status    TimesheetStatus  @default(OPEN)
  createdAt DateTime         @default(now())
  lockedAt  DateTime?
  entries   TimesheetEntry[]
}

model TimesheetEntry {
  id            String   @id @default(uuid())
  periodId      String
  staffId       String
  assignmentId  String?  @unique
  workDate      DateTime
  minutesWorked Int
  hourlyRate    Float?
  notes         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  period     TimesheetPeriod @relation(fields: [periodId], references: [id])
  staff      User            @relation(fields: [staffId], references: [id])
  assignment Assignment?     @relation(fields: [assignmentId], references: [id])
}

enum Role {
  ADMIN
  STAFF
  CLIENT
}

enum JobType {
  ONE_OFF
  RECURRING
}

enum AppointmentStatus {
  SCHEDULED
  COMPLETED
  CANCELLED
  LATE
}

enum AssignmentStatus {
  PENDING
  EN_ROUTE
  ON_SITE
  COMPLETED
  SICK_LEAVE
}

enum LeaveType {
  SICK
  VACATION
  PERSONAL
  UNPAID
}

enum TimesheetStatus {
  OPEN
  SUBMITTED
  APPROVED
  LOCKED
}
