generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  role      Role
  createdAt DateTime @default(now())
  password  String

  appointmentsAsClient Appointment[] @relation("ClientAppointments")
  appointmentsAsStaff  Appointment[] @relation("StaffAppointments")
}

model Appointment {
  id        String   @id @default(uuid())
  startTime DateTime @db.Timestamptz
  endTime   DateTime @db.Timestamptz
  status    AppointmentStatus
  address   String

  clientId  String
  staffId   String

  client    User @relation("ClientAppointments", fields: [clientId], references: [id])
  staff     User @relation("StaffAppointments", fields: [staffId], references: [id])

  reminder5dSent  Boolean  @default(false)
  reminder1dSent  Boolean  @default(false)
  completionSent  Boolean  @default(false)
  price           Float?

  notes     VisitNote[]
  createdAt DateTime @default(now()) @db.Timestamptz
}

model VisitNote {
  id               String   @id @default(uuid())
  content          String
  isClientVisible  Boolean  @default(false)
  appointmentId    String
  appointment      Appointment @relation(fields: [appointmentId], references: [id])
  createdAt        DateTime @default(now())
}

enum Role {
  ADMIN
  STAFF
  CLIENT
}

enum AppointmentStatus {
  SCHEDULED
  COMPLETED
  CANCELLED
  LATE
}

